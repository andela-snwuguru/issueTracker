
<div class="center centralize" style="max-width: 500px">
<h3>User Login</h3>

<div class="row card">
  <div class="row">
    <form class="col s12" method="post" action="/login">
      <div class="row">
      <%= Guru::MaterialHtml::input_field('email','email','Email','',{'required'=>'required','icon'=>'email'}) %>
      <%= Guru::MaterialHtml::input_field('password','password','Password','',{'required'=>'required','icon'=>'vpn_key'}) %>
        
        <div class="input-field">
          <p>Forgot your password? <a href="/recover">click here to recover password</a></p>
          <p>New Member? <a href="/signup">sign up now</a></p>
        </div>

        <%= Guru::MaterialHtml::submit('Login','',{'class'=>'waves-effect waves-light right'}) %>
      </div>
    </form>
  </div>
</div>
</div>