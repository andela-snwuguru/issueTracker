
<div class="center centralize" style="max-width: 500px">
<h3>User Login</h3>

<div class="row card">
  <div class="row">
  <p class="alert white-text lighten-2" style="text-align:left; display:none;"></p>
    <form class="col s12" method="post" action="/login" onsubmit="login">
      <div class="row">
      <%= Guru::MaterialHtml::input_field('email','email','Email','',{'required'=>'required','icon'=>'email'}) %>
      <%= Guru::MaterialHtml::input_field('password','password','Password','',{'required'=>'required','icon'=>'vpn_key'}) %>
        
        <div class="input-field">
          <p>Forgot your password? <a href="/auth/recover">click here to recover password</a></p>
          <p>New Member? <a href="/auth/signup">sign up now</a></p>
        </div>

        <%= Guru::MaterialHtml::button('Login','submit',{'class'=>'waves-effect waves-light right','onclick'=>'login()'}) %>
      </div>
    </form>
  </div>
</div>
</div>